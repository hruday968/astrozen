---
import Section from "./Section.astro";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {
    projects.map(({ name, summary, linkSource }, index) => {
      const top = 98 + index * 40;
      return (
        <div
          style={`top: ${top}px;`}
          class="sticky mb-12 rounded-2xl border border-neutral/20 bg-black"
        >
          <div class="bg-difu relative z-[1] flex w-full flex-col rounded-2xl bg-[#1c232d]/85 before:absolute before:inset-0 before:z-[-1] before:rounded-2xl before:bg-[url(/raja.png)] before:bg-[length:128px] before:bg-repeat before:opacity-[5%] before:content-[''] md:flex-row">
            <div class="px-6 pt-12">
              <h3 class="mb-5 font-serif text-3xl font-medium text-primary">
                {name}
              </h3>

              <ul class="mt-2 list-disc space-y-2 pl-5 text-base text-neutral">
                {summary.map((point) => (
                  <li>{point}</li>
                ))}
              </ul>

              <div class="flex gap-5 pt-10 text-white">
                {linkSource && (
                  <a
                    href={linkSource}
                    target="_blank"
                    rel="noreferrer"
                    class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
                  >
                    Source
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      );
    })
  }
</Section>
